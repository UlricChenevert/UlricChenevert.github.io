{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label":"Compile files",
        "dependsOn":["Build Lessc Files", "Build Typescript Files Frontend", "Build Typescript Files Backend", "Build Blog Files"],
        "group": {
          "kind": "build"
        }
      },
      {
        "label":"Build Lessc Files",
        "type": "shell",
        "command": "lessc ./Public/Styles/project.less ./Public/Styles/project.css",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label":"Build Typescript Files Frontend",
        "type": "typescript",
        "tsconfig": "./Public/tsconfig.json",
        "problemMatcher": ["$tsc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label":"Build Typescript Files Backend",
        "type": "typescript",
        "tsconfig": "./Backend/tsconfig.json",
        "problemMatcher": ["$tsc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label":"Build Blog Files",
        "type": "shell",
        "command": "./Tools/Build-Pages.ps1 './Blog' './Public/HTML/'",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }